/**
 * Component Heading
 */
.c-heading
  h1&
  h2&
    color tc-default
    padding-left 15px
    margin-left -(margin-sidebar)
  h1&
    border-left solid 5px bdc-accent
    font-size fs-xlarge
    font-weight bold
    line-height 1.3
    margin-bottom 10px
  h2&
    border-left solid 5px bdc-default
    font-size fs-large
    font-weight bold
    line-height 1.4
    margin-bottom 15px
