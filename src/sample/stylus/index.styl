@import 'nib'
global-reset()

clr-black = #333
clr-darkgray = #999
clr-lightgray = #ccc
clr-whitesmoke = #eee
clr-white = #fff

tc-default = clr-black
tc-gray = clr-darkgray
tc-lightgray = clr-lightgray

bgc-heading = clr-whitesmoke

bdc-default = clr-lightgray
bdc-light = clr-whitesmoke

fs-xlarge = 2.2rem
fs-large = 1.6rem
fs-medium = 1.4rem
fs-small = 1.2rem

common-radius = 4px
common-opacity = 0.6

/**
 * icons setting
 */
@font-face 
  font-family fontName
  font-weight normal
  font-style normal
  formatArr = ()
  for format in fontFormats
    if format == 'eot'
      push(formatArr, "url('./" + fontName + ".eot#iefix') format('embedded-opentype')")
    else if format == 'ttf'
      push(formatArr, "url('./" + fontName + ".ttf') format('truetype')")
    else
      push(formatArr, "url('./" + fontName + "." + format + "') format('" + format + "')")
  src unquote(join(', ', formatArr))
    
.icon
  font-family fontName
  display inline-block
  line-height 1
  vertical-align -0.1em
  font-weight normal
  font-style normal

  // log iconData
  if glyphs
    for key in glyphs
      if key[0] == icons
        for icon in key[1]
          &--{icon[0][1]}:before
            content icon[1][1]


/**
 * base setting
 */
html
  background-color clr-white
  color tc-default
  font-family sans-serif
  font-size 62.5%

a
  color tc-default
  transition color 0.1s linear
  &:hover
    color rgba(tc-default, common-opacity)


/**
 * layout
 */
header-padding = 25px
.header
  background bgc-heading
  box-sizing border-box
  font-size fs-medium
  margin-bottom 0
  padding (header-padding - 5px) header-padding
  fixed top 0 left 0
  width 100%
  z-index 10

  h1
    font-size fs-xlarge
    font-weight bold
    line-height @font-size
    margin-bottom 10px
    word-break break-word

  &__nav
    line-height fs-xlarge
    margin-bottom 5px

  &__size-list
    font-size fs-small


.main
  box-sizing border-box
  margin-top 110px
  padding-bottom @margin-top
  position fixed
  overflow scroll
  width 100%
  height 100%


/**
 * contents
 */
.list
  &__title
  &__item
    display inline-block
  &__title
    margin-right 10px
  &__item
    & + &
      margin-left 10px

.sample-list
  &__item
    box-sizing border-box
    padding 28px 25px 25px
    color #333
    width 100%
    border-bottom solid 15px bdc-light

  &__heading
    border-bottom solid 1px bdc-light
    font-size fs-large
    margin-bottom 10px
    padding-bottom 8px

  &__name
    font-weight bold
    margin-left 5px
  &__code
    margin-left 10px

.icon-list
  &__item
    width 100%
    & + &
      margin-top 10px


/**
 * helpers
 */
.u-fs
  for key in fontSize
    for s in key
      &--{s}
        font-size unit(s, px)
